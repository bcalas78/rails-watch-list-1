      <div class="form-login">
        <p>Welcome <%= @email %>!</p>

        <p>You can confirm your account email through the link below:</p>

        <p><%= link_to 'Confirm my account', confirmation_url(@resource, confirmation_token: @token), class: "btn btn-blue2" %></p>
      </div>
    </div>
  </div>
</div>
